{
  "name": "my-bilibili",
  "manifest_version": 3,
  "version": "1.0",
  "description": "my-bilibili",
  "permissions": ["cookies"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup/index.html"
  },
  "background": {
    "service_worker": "background/index.js"
  },
  "content_scripts": [
    {
      "js": ["scripts/bilibili.js"],
      "matches": [
        "https://*.bilibili.com/*"
      ]
    },
    {
      "js": ["scripts/site.js"],
      "matches": [
        "http://localhost:3000/"
      ]
    }
  ]
}
